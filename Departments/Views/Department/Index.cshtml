@model Departments.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <form asp-controller="Department" asp-action="Synchronize" method="post">
        <div class="form-group">
            <input type="submit" value="Синхронизация данных" class="btn btn-primary"/>
        </div>
    </form>

</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">

            <div class="form-group">
                <label asp-for="Filter.Name" class="control-label"></label>
                <input asp-for="Filter.Name" class="form-control" />
                <span asp-validation-for="Filter.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Найти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameForInnerType((Department d) => d.Name)
        </th>
        <th>
            @Html.DisplayNameForInnerType((Department d) => d.Status)
        </th>
        <th>
            @Html.DisplayNameForInnerType((Department d) => d.Parent)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Data)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>